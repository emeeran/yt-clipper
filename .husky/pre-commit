#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run lint-staged to format and lint changed files
npx lint-staged 2>/dev/null || echo "Lint-staged skipped"

# Run type checking
npm run type-check 2>/dev/null || echo "Type check skipped"

# Run tests on affected files
npx jest --passWithNoTests --bail 2>/dev/null || echo "Tests skipped"
